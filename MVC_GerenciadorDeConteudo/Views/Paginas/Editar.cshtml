
@{
    ViewBag.Title = "Editar Página";
    Business.Pagina pagina = ViewBag.Pagina;
}


<div class="jumbotron">
    <h3>Páginas</h3>
    <div>
        <button class="btn btn-default"><a href="/paginas">Voltar</a></button>

    </div>
    <br />
  
    <form action="/paginas/@pagina.Id/alterar" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="Name" value="@pagina.Name" name="name" placeholder="Digite nome">

        </div>
        <div class="form-group">
            <label for="conteudo">Conteúdo:</label>
            <textarea class="form-control" name="conteudo" id="Conteudo">@pagina.Conteudo</textarea>
        </div>

        <div class="form-group">
            <label for="data">Data:</label>
            <input type="datetime" class="form-control" name="data" value="@pagina.Data" id="Data">
        </div>

        <button type="submit" class="btn btn-primary">Alterar</button>
    </form>
</div>